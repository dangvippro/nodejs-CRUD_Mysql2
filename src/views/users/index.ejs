<body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Manage <b>Users</b></h2>
                        </div>
                        <div class="col-sm-6 text-right" style="display: flex; justify-content: flex-end;">
                            <a href="/create" class="btn btn-success" style="display:flex; align-items: center;"><i
                                    class="material-icons mr-2">&#xE147;</i> <span>Add New User</span></a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Fullname</th>
                            <th>Password</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Users.forEach((item, index)=> { %>
                            <tr>
                                <td>
                                    <%= item.id %>
                                </td>
                                <td>
                                    <%= item.fullname %>
                                </td>
                                <td>
                                    <input type="password" readonly style="border: 0; outline: 0; background-color: transparent;" name="" id="" value="<%= item.password %>">
                                </td>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td>
                                    <%= item.phone %>
                                </td>
                                <td> <a href="update/<%= item.id %>" class="edit"><i
                                            class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                    <a onclick="return confirm('Do you want to delete?')" href="delete/<%= item.id %>" class="delete text-danger"><i
                                            class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

